# =============================================================================
# APROMORE CHATBOT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# API CONFIGURATION
# =============================================================================

# OpenAI API Key (required for AI chat features)
# Get your key from: https://platform.openai.com/api-keys
SECRET_KEY=your_openai_api_key_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React Frontend
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION (if needed)
# =============================================================================

# SQLite Database (default)
DATABASE_URL=sqlite:///apromore_chatbot.db

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@localhost:5432/apromore_chatbot

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/apromore_chatbot.log

# =============================================================================
# DATA PROCESSING CONFIGURATION
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Supported file formats
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Chart generation settings
CHART_WIDTH=800
CHART_HEIGHT=600

# =============================================================================
# SECURITY & PERFORMANCE
# =============================================================================

# Secret key for Flask sessions (generate a random string in production)
SECRET_KEY=your_openai_api_key_here

# Rate limiting
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session configuration
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (set to False in production)
DEBUG=True

# Enable auto-reload (set to False in production)
AUTO_RELOAD=True

# =============================================================================
# KPI INSTRUMENTATION & TELEMETRY
# =============================================================================

# Directory for logs and traces
LOG_DIR=./logs

# Enable telemetry and tracing
ENABLE_TRACING=True

# Tolerance for metric verification (default 2%)
TOLERANCE_PCT=0.02

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Set these when deploying to production
# FLASK_ENV=production
# FLASK_DEBUG=False
# DEBUG=False
# AUTO_RELOAD=False
